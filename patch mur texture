raydraw.c

void  draw_ray_wall(...)

if (rc->raydiry > 0 && rc->side)
	draw_dot(e, ray->x, ray->y, 0xFF0000);
if (rc->raydiry < 0 && rc->side)
	draw_dot(e, ray->x, ray->y, 0x00FF00);
if (rc->raydirx > 0 && rc->side == 0)
	draw_dot(e, ray->x, ray->y, 0x0000FF);
if (rc->raydirx < 0 && rc->side == 0)
	draw_dot(e, ray->x, ray->y, 0xAA00BB);
